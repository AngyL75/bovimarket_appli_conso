{% extends "base_blanche.html.twig" %}

{% block page_content %}
    <div class="row">
        <div class="col-xs-12">
            <h1>Mes commandes</h1>
        </div>
    </div>

    {% for commande in commandes %}
        <div class="row ListeStyle2">
            <div class="col-xs-12">
                <div class="row">
                    <div class="col-xs-2">
                        <h3><a href="{{ path_for("app.commande.detail",{"id":commande.id}) }}">Commande N° {{ commande.numeroCommande }}</a></h3>
                    </div>
                    <div class="col-xs-4">
                        <h3>Le {{ (commande.dateCommande/1000)|date("d m Y") }}</h3>
                    </div>
                    <div class="col-xs-4">
                        <h3>{{ commande.total }}€</h3>
                    </div>
                    <div class="col-xs-2">
                        <h3>{{ commande.etatCommandeLabel }}</h3>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}

{% extends "base_login.html.twig" %}

{% block prev %}
    <div id="return"><a href="javascript:history.back()">&lt;</a></div>
{% endblock %}


{% block page_content %}
    <div class="row">

        {% if hasFlashes() %}
            <div class="col-xs-12">
                {% for type,flash in getFlashes() %}
                    <div class="alert alert-{{ type }}">
                        {{ flash }}
                    </div>
                {% endfor %}
            </div>
        {% endif %}


        <div class="col-xs-12">
            <h1>Connectez-vous</h1>


            <form action="{{ path_for("app.login.login") }}" method="post">
                <input type="hidden" name="login[referer]" value="{{ referer }}">
                <div class="form-group">
                    <label for="username">E-Mail</label>
                    <input type="text" class="form-control" name="login[username]">
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input type="password" class="form-control" name="login[password]">
                </div>
                <div class="form-group">
                    <div class="col-xs-7">
                        <button class="btn btn-vert" type="submit">Se connecter</button>
                    </div>
                    <div class="col-xs-5">
                        <a class="btn btn-fb">
                            <img src="/web/images/fb-btn.png" alt="" class="img-responsive">
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

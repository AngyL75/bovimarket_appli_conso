<div class="row ListeStyle2">
    <div class="col-xs-12">
        <div class="row">
            <a class="link"
               href="{{ path_for("flash.recettes_detail",{"categ":morceau.typeViande,"idMorceau":morceau.id,"idRecette":recette.id}) }}"
               data-color="#ffffff">
                <div class="col-xs-12 col-sm-3">
                    <img src="{{ recette.photoPath }}" alt="..." class="img-responsive img-circle"/>
                </div>
                <div class="col-xs-12 col-sm-9 RecetteLine" style="padding:40px 20px;">
                    <div class="Nom col-xs-12">{{ recette.titre }}</div>
                    <div class="col-xs-6 col-sm-4 sablier">
                        {{ recette.tempsPreparation }}
                    </div>
                    <div class="col-xs-6 col-sm-4 cuisson">
                        {{ recette.tempsCuisson }}
                    </div>
                    <div class="col-xs-12 col-sm-4 difficulte {{ recette.difficulteClass }}">
                        <p>{{ recette.difficulteNom }}</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
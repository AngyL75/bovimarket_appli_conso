{% extends "base_blanche.html.twig" %}

{% block prev %}
    <div id="return"><a href="javascript:history.back()">&lt;</a></div>
{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-xs-12">
            <h1>Paiement</h1>
        </div>
    </div>

    <div class="row ListeStyle2">
        <div class="col-xs-4">
            <a href="{{ path_for("app.commande.show_cart") }}"" class="IconPanier">Panier</a>
        </div>
        <div class="col-xs-4">
            <a href="{{ path_for("app.commande.select_livraison") }}" class="IconRecup">Livraison</a>
        </div>
        <div class="col-xs-4">
            <a href="#" class="IconPaiementSelect">Paiement</a>
        </div>
    </div>
    <form method="post" action="{{ path_for("app.commande.save_paiement") }}">
        <div class="row ListeStyle2">
            <div class="col-xs-12">
                <div class="row">
                    <div class="col-xs-2 col-sm-1" style="padding:15px 0 20px 40px;">
                        <input type="radio" name="paiement" value="carte">
                    </div>
                    <div class="col-xs-10 col-sm-11">
                        <div class="Description" style="width:auto;padding-right: 0px;">
                            <p class="Nom">Carte Bleue <img src="/web/images/carte.jpg" width="120"/></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row ListeStyle2">
            <div class="col-xs-12">
                <div class="row">
                    <div class="col-xs-2 col-sm-1" style="padding:15px 0 20px 40px;">
                        <input type="radio" name="paiement" value="retrait">
                    </div>
                    <div class="col-xs-10 col-sm-11">
                        <div class="Description" style="width:auto;padding-right: 0px;">
                            <p class="Nom">Au retrait de ma commande</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12">
                <button class="btn btn-vert" id="Rechercher" type="submit" style="margin:30px 0">Valider mon mode de
                    paiement
                </button>
            </div>
        </div>
    </form>
{% endblock %}



{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
            $(".row.ListeStyle2").click(function(e){
                var radio = $(this).find("input[type='radio']").first();
                radio.prop("checked",true);
            })
        });
    </script>
{% endblock %}
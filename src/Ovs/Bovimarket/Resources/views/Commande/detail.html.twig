{% extends "base_blanche.html.twig" %}

{% block page_content %}
    <div class="row">
        <div class="col-xs-12">
            <h1>Mon profil</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="row">
                <div class="col-xs-6">
            <h3>Commande N°{{ commande.numeroCommande }}</h3>
            <p class="Qte">Le {{ (commande.dateCommande/1000)|date("d/m/Y") }}</p>
                </div>
                <div class="col-xs-6">
                    <p class="Prix">
                        <a href="{{ path_for("app.entite.detail",{"id":entite.id}) }}">{{ entite.name }}</a>
                    </p>
                    <p class="Qte">
                        {{ entite.adresse.adresse }}
                        {{ entite.adresse.codePostal }}
                        {{ entite.adresse.ville }}
                    </p>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <p class="text-center Prix">Détail de la commande</p>
                </div>
            </div>
            {% for ligne in produits %}
                {% set produit = ligne.produitObj %}
                <div class="row ListeStyle2">
                    <div class="col-xs-12">
                        <div class="row">
                            <div class="col-xs-2">
                                <div class="Tof"><img src="{{ apiImagePath(produit.photo) }}" alt="..." /></div>
                            </div>
                            <div class="col-xs-5">
                                <div class="Description" style="width:auto;">
                                    <p class="Nom">{{ produit.nom }}</p>
                                    <p class="Desc">{{ produit.accroche }}</p>
                                </div>
                            </div>
                            <div class="col-xs-1">
                                <p class="Qte">x {{ ligne.quantite }}</p>
                            </div>
                            <div class="col-xs-2 text-right">
                                <p class="Prix">{{ ligne.prixUnitaire }} €</p>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
            <div class="row ListeStyle2">
                <div class="col-xs-12">
                    <div class="row">
                        <div class="col-xs-2 col-xs-offset-6">
                            <h3>Total</h3>
                        </div>
                        <div class="col-xs-2 text-right">
                            <p class="Prix">{{ commande.total }} €</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

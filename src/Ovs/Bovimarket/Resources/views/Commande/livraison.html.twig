{% extends "base_blanche.html.twig" %}

{% block page_content %}
    <div class="row">
        <div class="col-xs-12">
            <h1>Livraison</h1>
        </div>
    </div>

    <div class="row ListeStyle2">
        <div class="col-xs-4">
            <a href="{{ path_for("app.commande.show_cart") }}" class="IconPanier">Panier</a>
        </div>
        <div class="col-xs-4">
            <a href="#" class="IconRecupSelect">Livraison</a>
        </div>
        <div class="col-xs-4">
            <a href="#" class="IconPaiement">Paiement</a>
        </div>
    </div>
    <form method="post" action="{{ path_for("app.commande.save_livraison") }}">
        {% for canal in canaux %}
            <div class="row ListeStyle2">
                <div class="col-xs-12">
                    <div class="row">
                        <div class="col-xs-1" style="padding:20px 0 20px 40px;">
                            <input type="radio" name="canal" value="{{ canal.id }}">
                        </div>
                        <div class="col-xs-6">
                            <div class="Description" style="width:auto;">
                                <p class="Nom">{{ canal.nom }}</p>
                                <p class="Desc">
                                    {{ canal.typeCanal.description }}<br>
                                    {{ canal.lieu }}
                                    <br>
                                    {% for horaire in canal.horaires %}
                                        {{ renderHoraire(horaire) }}<br>
                                    {% endfor %}
                                </p>
                                <i>{{ canal.conditions }}</i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}

        <div class="row">
            <div class="col-xs-6 col-xs-offset-3">
                <button class="btn btn-vert" id="Rechercher" type="submit" style="margin:30px 0">Valider ma livraison
                </button>
            </div>
        </div>
    </form>
{% endblock %}
